Config {
	font = "xft:monospace:pixelsize=11"
	bgColor = "#111111",
	fgColor = "#CCCCCC",
	position = Top,
	lowerOnStart = True,
	commands = [
		Run Cpu [
			"-t", "cpu: <total>%"
		] 10,
		Run Memory [
			"-t", "mem: <usedratio>%"
		] 10,
		Run Battery [
			"-t", "bat: <left>%"
		] 600,
		Run Date "%a %d %b %y %H:%M" "date" 10,
		Run StdinReader
	],
	template = "%StdinReader% }{ %cpu% | %memory% | %battery% | %date% "
}
